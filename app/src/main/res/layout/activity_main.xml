            android:background="@drawable/buttonshap"
            android:onClick="clickedSqrt"
            android:id="@+id/SqrtBtn"/>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
